<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <div class="ribbon21 col-md-6 offset-md-3">
          <h3>管理者ログイン</h3>
        </div>
        <div class="p-4"></div>
         
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
          
        <form>
          <div class="form-group row">
            <label for="email" class="col-md-3 offset-md-2">メールアドレス</label>
            <div class="col-sm-7">
              <%= f.email_field :email, size:30, autofocus: true %>
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-md-3 offset-md-2">パスワード</label>
            <div class="col-sm-7">
              <%= f.password_field :password, size:30 %>
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-md-3 offset-md-2"></label>
            <div class="col-sm-7">
              <%= f.submit "Log in", class: "btn btn-primary shadow" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>