<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <h5>ログイン</h5>
        </br>
         
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         
        <form>
          <div class="form-group row text-center">
            <label for="name" class="col-sm-2">メールアドレス</label>
            <div class="col-sm-2">
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
          <div class="form-group row text-center">
            <label for="name" class="col-sm-2">パスワード</label>
            <div class="col-sm-2">
              <%= f.password_field :password %>
            </div>
          </div>
          <div class="form-row text-center">
            <div class="col-4">
            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>