<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-2"></div>
          <h3 class="ribbon4">旅行計画案 -ADMIN-</h3>
        <table class="table table-hover" border="2">
          <thead>
            <tr>
              <th>日程</th>
              <th>スケジュール</th>
              <th>食事</th>
              <th>都市名</th>
              <th>宿泊先名</th>
              <th>ADMIN ONLY</th>
            </tr>
          </thead>
          <tbody>
            <% @plans.each do |plan| %>
              <tr>
                <td><%= plan.time.strftime('%Y-%m-%d %T') %></td>
                <td><%= plan.schedule %></td>
                <td>
                  <% if plan.meal == 'nothing' %>
                    <%= ' ' %>
                  <% elsif plan.meal == 'morning' %>
                    <%= '朝' %>
                  <% elsif plan.meal == 'noon' %>
                    <%= '昼' %>
                  <% else %>
                    <%= '夜' %>
                  <% end %>
                </td>
                <td><%= plan.city_name %></td>
                <td><%= plan.lodgment_target_name %></td>
                <td><%= link_to " edit", edit_admin_plan_path(plan), class: "btn btn-primary shadow fas fa-edit" %>
                    <%= link_to " delete", admin_plan_path(plan), method: :delete, class: "btn btn-danger shadow fas fa-trash-alt", "data-confirm" => "この投稿を削除します。よろしいですか？" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>