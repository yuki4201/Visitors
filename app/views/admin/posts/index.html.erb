<main class="mt-5">
  <p id="notice"></p>
  <div class="containe-12">
    <div class="row-6">
      <div class="col">
        <div class="p-4"></div>
        <p class="text-center">
          <center style="font-size:50px;">LIST UP</center>
        </p>
          <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>画像</th>
              <th>ジャンル</th>
              <th>施設名</th>
              <th>所在地</th>
              <th>レビュー</th>
              <th>朝食の有無</th>
              <th>掲載元URL</th>
              <th>ADMIN ONLY</th>
            </tr>
          </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.id, users_post_path(post) %></td>
                <td><%= post.image %></td>
                <td>
                <% if post.genre == "1" %>
                  <%= 'ホテル' %>
                <% elsif post.genre == "2" %>
                  <%= '旅館' %>
                <% else %>
                  <%= '民宿' %>
                <% end %>
                </td>
                <td><%= post.facility_name %></td>
                <td><%= post.address %></td>
                <td><%= post.review %></td>
                <td><% if post.breakfast_existence? %>
                  朝食有り
                  <% else %>
                  朝食無し
                  <% end %>
                </td>
                <td><%= post.url %></td>
                <td><%= link_to "editing", edit_admin_post_path(post), class: "btn btn-primary" %>
                    <%= button_to "delete", admin_post_path(post), method: :delete, class: "btn btn-danger" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>  
      </div>
    </div>
  </div>
</main>