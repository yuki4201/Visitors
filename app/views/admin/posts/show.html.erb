<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-4">
        <p class="text-center"></div>
          <center style="font-size:30px;">投稿詳細 -ADMIN-</center>
        </p>
        <div class="p-3"></div>
        <div class="images">
            <%= attachment_image_tag @post, :image, :fill, 400, 300, format: 'jpeg' %>
        </div>
        </br>
        <form>
          <label for="genre" class="col-md-2 offset-md-7">ジャンル</label>
            <% if @post.genre == "1" %>
              <%= 'ホテル' %>
            <% elsif @post.genre == "2" %>
              <%= '旅館' %>
            <% else %>
              <%= '民宿' %>
            <% end %>
          </br>
          <label for="facility_name" class="col-md-2 offset-md-7">施設名</label>
            <%= @post.facility_name %>
          </br>
          <label for="address" class="col-md-2 offset-md-7">所在地</label>
            <%= @post.address %>
          </br>
          <label for="review" class="col-md-2 offset-md-7">レビュー</label>
            <%= @post.review %>
          </br>
          <label for="breakfast_existence" class="col-md-2 offset-md-7">朝食の有無</label>
            <% if @post.breakfast_existence? %>
              朝食有り
            <% else %>
             朝食無し
            <% end %>
          </br>
          <label for="url" class="col-md-2 offset-md-7">掲載元URL</label>
            <%= @post.url %>
          </br>
        </form>
        </br>
        <div class="col-md-6 offset-md-7">
          <%= link_to " edit", edit_admin_post_path, class: "btn btn-primary fas fa-edit" %>
          <%= link_to " delete", admin_post_path(@post), method: :delete, class: "btn btn-danger fas fa-trash-alt", "data-confirm" => "この投稿を削除します。よろしいですか？" %>
        </div>
      </div>
    </div>
  </div>
</main>