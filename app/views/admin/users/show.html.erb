<main>
  <p id="notice"></p>
  <div class="container-12">
    <div class="row-6">
      <div class="col">
        <div class="p-5"></div>
          <p class="text-center">
            <center style="font-size:30px;">ユーザ詳細　<%= @user.name %></center>
          </p>
          </br>
          <table class="table table-hover">
          宿泊先投稿一覧
          <thead>
            <tr>
              <th>ID</th>
              <th>画像</th>
              <th>ジャンル</th>
              <th>施設名</th>
              <th>所在地</th>
              <th>レビュー</th>
              <th>朝食の有無</th>
              <th>掲載元URL</th>
              <th>ADMIN ONLY</th>
            </tr>
          </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= link_to edit_admin_post_path(post) do %>
                    <%= post.id %></td>
                    <% end %>
                <td><%= post.image_id %></td>
                <td>
                <% if post.genre == "1" %>
                  <%= 'ホテル' %>
                <% elsif post.genre == "2" %>
                  <%= '旅館' %>
                <% else %>
                  <%= '民宿' %>
                <% end %>
                </td>
                <td><%= post.facility_name %></td>
                <td><%= post.address %></td>
                <td><%= post.review %></td>
                <td><% if post.breakfast_existence? %>
                  朝食有り
                  <% else %>
                  朝食無し
                  <% end %>
                </td>
                <td><%= post.url %></td>
                <td><%= button_to "delete", admin_post_path(post), method: :delete, class: "btn btn-danger", "data-confirm" => "この投稿を削除します。よろしいですか？" %></td>
              </tr>
              <% end %>
            </tbody>
          <table class="table table-hover">
          旅行計画案作成一覧
          <thead>
            <tr>
              <th>年・月・日・時間</th>
              <th>スケジュール</th>
              <th>食事(朝・昼・夜)</th>
              <th>都市名</th>
              <th>宿泊先名</th>
              <th>ADMIN ONLY</th>
            </tr>
          </thead>
            <tbody>
              <% @plans.each do |plan| %>
              <tr>
                <td><%= link_to plan.time.strftime('%Y-%m-%d %T'), edit_admin_plan_path(plan) %></td>
                <td><%= plan.schedule %></td>
                <td>
                  <% if plan.meal == "0" %>
                    <%= ' ' %>
                  <% elsif plan.meal == "1" %>
                    <%= '昼' %>
                  <% elsif plan.meal == "2" %>
                    <%= '昼' %>
                  <% else %>
                    <%= '夜' %>
                  <% end %>
                </td>
                <td><%= plan.city_name %></td>
                <td><%= plan.lodgment_target_name %></td>
                <td><%= button_to "delete", admin_plan_path(plan), method: :delete, class: "btn btn-danger", "data-confirm" => "この投稿を削除します。よろしいですか？" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>  
      </div>
    </div>
  </div>
</main>