<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-4"></div>
        <p class="text-center">
          <center style="font-size:30px;">ユーザ情報編集 -ADMIN-</center>
        </p>
        <%= form_with model: @user, url:admin_user_path, local:true do |f| %>
          <form>
            <div class="form-group row">
              <label for="name" class="col-sm-2">ユーザー名</label>
              <div class="col-sm-10">
                <%= f.text_field :name, size:30 %>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-2">メールアドレス</label>
              <div class="col-sm-10">
                <%= f.text_field :email, size:30 %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2"></label>
              <div class="col-sm-10">
                <%= f.submit "UPDATE", class: "btn btn-success" %>
              </div>
            </div>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</main>