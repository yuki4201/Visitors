<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-4"></div>
        <div class="ribbon7 col-md-6 offset-md-3">
          <h3>ユーザ情報編集 -ADMIN-</h3>
        </div>
        <%= form_with model: @user, url:admin_user_path, local:true do |f| %>
        <div class="p-4"></div>
          <form>
            <div class="form-group row">
              <label for="name" class="col-md-2 offset-md-3">ユーザー名</label>
              <div class="col-sm-7">
                <%= f.text_field :name, size:30 %>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-md-2 offset-md-3">メールアドレス</label>
              <div class="col-sm-7">
                <%= f.text_field :email, size:30 %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-md-2 offset-md-3"></label>
              <div class="col-sm-7">
                <%= f.submit "UPDATE", class: "btn btn-success shadow" %>
              </div>
            </div>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</main>