<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-4"></div>
        <div class="ribbon9 col-md-6 offset-md-3">
          <h3>ユーザ情報編集</h3>
        </div>
        <%= form_with model: @user, url:my_page_path, local:true do |f| %>
        <br />
          <form>
            <div class="form-group row">
              <label for="name" class="col-md-3 offset-md-2">ユーザー名</label>
              <div class="col-sm-7">
                <%= f.text_field :name, size:30 %>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-md-3 offset-md-2">メールアドレス</label>
              <div class="col-sm-7">
                <%= f.text_field :email, size:30 %>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-md-3 offset-md-2"></label>
              <div class="col-sm-7">
                <%= f.submit "UPDATE!", class: "btn btn-success" %>
                <%= link_to "退会確認画面へ", confirm_unsubscribe_path, class: "btn btn-danger" %>
              </div>
            </div>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</main>