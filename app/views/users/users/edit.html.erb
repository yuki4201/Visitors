<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <p class="text-center">
          <center style="font-size:50px;">ユーザ情報編集</center>
        </p>
        <%= form_with model: @user, url:users_my_page_path, local:true do |f| %>
          <form>
            <div class="form-group row">
              <label for="name" class="col-sm-2 col-form-label">ユーザー名</label>
              <div class="col-sm-10">
                <%= f.text_field :name %>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-2 col-form-label">メールアドレス</label>
              <div class="col-sm-10">
                <%= f.text_field :email %>
              </div>
            </div>
            <%= f.submit "更新", class: "btn btn-success" %>
            <%= link_to "退会", users_confirm_unsubscribe_path, class: "btn btn-danger" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</main>