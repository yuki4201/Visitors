<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <p class="text-center">
          <center style="font-size:30px;">ログイン</center>
        </p>
        </br>
         
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class="form-group row">
            <label for="name" class="col-sm-2">ユーザーネーム</label>
            <div class="col-sm-2">
              <%= f.text_field :name, size:30, autofocus: true, placeholder: "ユーザー名を入力" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-2">メールアドレス</label>
            <div class="col-sm-2">
              <%= f.email_field :email, size:30, autofocus: true, placeholder: "メールアドレスを入力" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-sm-2">パスワード</label>
            <div class="col-sm-2">
              <%= f.password_field :password, size:30, placeholder: "パスワードは6文字以上" %>
            </div>
          </div>
          <div class="form-row">
            <div class="col-4">
              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-primary" %>
                <%= link_to 'Sign in with Google', user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-info" %>
              </div>
            </div>
            <%#= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</main>