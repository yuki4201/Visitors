<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-4"></div>
        <% if @post.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@post.errors.count, "項目") %> への記入が完了していません:</h2>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="ribbon6 col-md-6 offset-md-3">
          <h3>NEW POST</h3>
        </div>
        <%= form_with model: @post, url:posts_path(@post), local:true do |f| %>
        <div class="p-3"></div>
        <div class="form-group row">
          <label for="inputImage" class="col-md-2 offset-md-2">画像</label>
          <div class="col-sm-8">
            <%= f.attachment_field :image, placeholder: "画像" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="genre" class="col-md-2 offset-md-2">ジャンル</label>
          <div class="col-sm-8">
            <%= f.select :genre, {'ホテル':'hotel', '旅館':'ryokan','民宿':'guest_house' }, {include_blank: '--選択してください--'} %>
          </div>
        </div>
        <div class="form-group row">
          <label for="facility_name" class="col-md-2 offset-md-2">施設名</label>
          <div class="col-sm-8">
            <%= f.text_field :facility_name, size:50, placeholder: "宿泊先の名前を入力" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="address" class="col-md-2 offset-md-2">所在地</label>
          <div class="col-sm-8">
            <%= f.text_field :address, size:50, placeholder: "都道府県名を入力" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="review" class="col-md-2 offset-md-2">レビュー</label>
          <div class="col-sm-8">
            <%= f.text_field :review, size:50, placeholder: "レビューを入力" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="breakfast_existence" class="col-md-2 offset-md-2">朝食の有無</label>
          <div class="col-sm-8">
            <%= f.select :breakfast_existence, { '朝食有り':'yes', '朝食無し':'no' }, {include_blank: '--選択してください--'} %>
          </div>
        </div>
        <div class="form-group row">
          <label for="url" class="col-md-2 offset-md-2">掲載元URL</label>
          <div class="col-sm-8">
            <%= f.text_field :url, size:50, placeholder: "予約サイト、宿泊先のHPのリンクを入力"  %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-2 offset-md-2"></label>
          <div class="col-sm-12">
          <%= f.submit "UPLOAD!", class: "btn btn-success btn-block shadow" %><br />
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</main>