<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-4"></div>
        <div class="ribbon6 col-md-6 offset-md-3">
          <h3>LIST UP</h3>
        </div>
        <div class="p-3"></div>
        <% if user_signed_in? %>
          <%= link_to " 新規投稿【NEW】", new_post_path, class: "btn btn-success shadow fas fa-plus" %>
        <% end %>
        <div class="p-2"></div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>ジャンル</th>
              <th>施設名</th>
              <th>所在地</th>
              <th>朝食の有無</th>
              <th>掲載元URL</th>
              <th></th>
            </tr>
          </thead>
            <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td>
                <% if post.genre == 'hotel' %>
                  <%= 'ホテル' %>
                <% elsif post.genre == 'ryokan' %>
                  <%= '旅館' %>
                <% else %>
                  <%= '民宿' %>
                <% end %>
              </td>
              <td><%= post.facility_name %></td>
              <td><%= post.address %></td>
              <td>
                <% if post.breakfast_existence == 'yes' %>
                  <%= '朝食有り' %>
                <% else %>
                  <%= '朝食無し' %>
                <% end %>
              </td>
              <td><%= post.url %></td>
              <% if user_signed_in? %><i class="fas fa-info-square"></i>
              <td><%= link_to " 詳細", post_path(post), class: "btn btn-info shadow fas fa-info" %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>