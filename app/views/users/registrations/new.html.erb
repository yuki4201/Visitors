<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-5"></div>
        <div class="ribbon22 col-md-6 offset-md-3">
          <h3>新規ユーザー登録</h3>
        </div>
        <div class="p-4"></div>
         
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          
          <div class="form-group row">
            <label for="name" class="col-md-3 offset-md-2">ユーザーネーム</label>
            <div class="col-sm-7">
              <%= f.text_field :name, size:30, autofocus: true, placeholder: "ユーザー名を入力" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-md-3 offset-md-2">メールアドレス</label>
            <div class="col-sm-7">
              <%= f.email_field :email, size:30, autofocus: true, placeholder: "メールアドレスを入力" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-md-3 offset-md-2">パスワード</label>
            <div class="col-sm-7">
            <%= f.password_field :password, size:30, placeholder: "パスワードは6文字以上" %>
          　</div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-md-3 offset-md-2">パスワード(確認用)</label>
            <div class="col-sm-7">
            <%= f.password_field :password_confirmation, size:30, placeholder: "パスワードは6文字以上" %>
          　</div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-md-3 offset-md-2"></label>
            <div class="col-sm-7">
            <%= f.submit "Sign up", class: "btn btn-primary shadow" %>
            <%= render "devise/shared/error_messages" %>
        　</div>
        <% end %>
      </div>
    </div>
  </div>
</main>