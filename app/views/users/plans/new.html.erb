<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-2"></div>
        <% if @plan.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@plan.errors.count, "項目") %> への記入が完了していません:</h2>
            <ul>
              <% @plan.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <h3 class="ribbon4">旅行計画案新規作成</h3>
        <div class="p-3"></div>
          <%= form_with model: @plan, url:plans_path(@plan), local:true do |f| %>
            <div class="form-group row">
              <label for="time" class="col-md-3 offset-md-2">日程</label>
              <div class="col-sm-7">
                <%= f.datetime_field :time %>
              </div>
            </div>
            <div class="form-group row">
              <label for="schedule" class="col-md-3 offset-md-2">スケジュール</label>
              <div class="col-sm-7">
                <%= f.text_area :schedule, placeholder: "この時間の予定を入力" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="meal" class="col-md-3 offset-md-2">食事(朝・昼・夜)</label>
              <div class="col-sm-7">
                <%= f.select :meal, { ' ':'nothing','朝':'morning', '昼':'noon','夜':'night' }, {include_blank: '食事を取る場合に選択、それ以外は空白'} %>
              </div>
            </div>
            <div class="form-group row">
              <label for="city_name" class="col-md-3 offset-md-2">都市名</label>
              <div class="col-sm-7">
                <%= f.text_field :city_name, size:30, placeholder: "都道府県名を入力" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="lodgment_target_name" class="col-md-3 offset-md-2">宿泊先名</label>
              <div class="col-sm-7">
                <%= f.text_field :lodgment_target_name, size:30, placeholder: "チェックイン先の名前を入力" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="" class="col-md-3 offset-md-2"></label>
              <div class="col-sm-12">
              <%= f.submit "UPLOAD!", class: "btn btn-success btn-block" %><br />
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>