<main class="mt-5">
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="p-4"></div>
        <div class="text-center">
          <p style="font-size:30px;">旅行計画案(DETAILS)</p>
        </div>
        <div class="p-3"></div>
        <div class="images">
          <img src="/static/ogasuta458A7873_TP_V4.JPG" alt="画像" width="300" height="200">
        </div>
        <form>
          <label for="name" class="col-md-2 offset-md-6">日程</label>
          　<%= @plan.time.strftime('%Y-%m-%d %T') %>
          <br />
          <label for="schedule" class="col-md-2 offset-md-6">スケジュール</label>
          　<%= @plan.schedule %>
          <br />
          <label for="meal" class="col-md-2 offset-md-6">食事(朝・昼・夜)</label>
            <% if @plan.meal == 'nothing' %>
              <%= '  ' %>
            <% elsif @plan.meal == 'morning' %>
              <%= '朝' %>
            <% elsif @plan.meal == 'noon' %>
              <%= '昼' %>
            <% else %>
              <%= '夜' %>
            <% end %>
          <br />
          <label for="city_name" class="col-md-2 offset-md-6">都市名</label>
            <%= @plan.city_name %>
          <br />
          <label for="lodgment_target_name" class="col-md-2 offset-md-6">宿泊先名</label>
            <%= @plan.lodgment_target_name %>
          <br />
        </form>
        <br />
        <div class="col-md-6 offset-md-6">
          <%= link_to " back", plans_path, class: "btn btn-info fas fa-undo-alt" %>
          <%= link_to " edit", edit_plan_path, class: "btn btn-primary fas fa-edit" %>
          <%= link_to " delete", plan_path(@plan), method: :delete, class: "btn btn-danger fas fa-trash-alt", "data-confirm" => "この投稿を削除します。よろしいですか？" %>
        </div>
      </div>
    </div>
  </div>
</main>